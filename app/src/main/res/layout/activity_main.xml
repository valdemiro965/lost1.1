<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papelfundo"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/imagePrincipal"
        android:layout_width="137dp"
        android:layout_height="174dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/logoa" />


    <ProgressBar
        android:id="@+id/barrinha"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="19dp"
        android:progressDrawable="@drawable/cunstom_progressbar"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="325dp"
        android:text="Praticando a Cuca...."
        android:textColor="#F5FFFFFF" />


</RelativeLayout>


